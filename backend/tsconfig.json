{
  "compilerOptions": {
    "target": "ES6", // Use ES6 as the output language
    "module": "NodeNext", // Use Node's module resolution (required for .ts imports)
    "moduleResolution": "nodenext", // Resolve imports with Node-style resolution
    "esModuleInterop": true, // Enable ESModule interoperability
    "skipLibCheck": true, // Skip checking lib files to improve compilation time
    "outDir": "./dist", // Output compiled files to the 'dist' directory
    "rootDir": "./src",
    "strict": true, // Enable strict type checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
    "resolveJsonModule": true, // Allow importing JSON files
    "baseUrl": "./", // Ensure the base URL is the project root
    "declaration": true, // Optionally generate .d.ts files for type declarations
    "declarationDir": "./dist/types"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
